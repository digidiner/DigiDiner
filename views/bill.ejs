<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Bill</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        .bill {
            margin-top: 20px;
        }

        .bill-item {
            margin-bottom: 10px;
        }

        .item-info {
            list-style-type: none;
        }

        .subtotal {
            font-weight: bold;
        }

        .taxes {
            font-weight: bold;
        }

        .total {
            font-weight: bold;
        }

        .tip {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .pay-bill-btn {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Restaurant Bill</h1>
        <div class="bill">
            <% if (orderItems.length > 0) { %>
                <% orderItems.forEach(function(item) { %>
                    <div class="bill-item">
                        <h4>
                            <%= menuItems[item.id].name %>
                        </h4>
                        <ul class="item-info">
                            <li>Quantity: <%= item.count %>
                            </li>
                            <li>Cost: $<%= menuItems[item.id].price %>
                            </li>
                        </ul>
                    </div>
                <% }) %>
                <div class="subtotal">
                    Subtotal: $<%= subtotal.toFixed(2) %>
                </div>
                <div class="taxes">
                    Taxes: $<%= taxes.toFixed(2) %>
                </div>
                <div class="total">
                    Total: $<%= total.toFixed(2) %>
                </div>
                <div class="tip">
                    <label for="tip">Tip:</label>
                    <input type="number" id="tip" min="0" step="0.01" value="0">
                    <button class="btn btn-primary" onclick="updateTotal()">Apply Tip</button>
                </div>
            <% } else { %>
                <p>No items in the bill.</p>
            <% } %>
        </div>
        <button class="btn btn-success pay-bill-btn" onclick="payBill()">Pay Bill</button>
    </div>
    <footer>
        <%- include('partials/footer') %>
    </footer>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        var orderItems = JSON.parse(<%= JSON.stringify(orderItems) %>)

        function updateTotal() {
            var total = <%= total %>;
            var tip = parseFloat($('#tip').val());
            total += tip;
            $('.total').html('Total: $' + total.toFixed(2));
        }

        function payBill() {
            var total = <%= total %>;
            var tip = parseFloat($('#tip').val());
            total += tip;
            window.location.href = '/payment?total=' + total.toFixed(2);
        }
    </script>

</body>

</html>