<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant order</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        .order {
            margin-top: 20px;
        }

        .order-item {
            margin-bottom: 10px;
        }

        .item-info {
            list-style-type: none;
        }

        .total-cost {
            font-weight: bold;
        }

        .confirm-order-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Restaurant order</h1>
        <div class="order">
            <% if (orderItems.length > 0) { %>
                <% orderItems.forEach(function(item) { %>
                    <div class="order-item">
                        <h4>
                            <%= menuItems[item.itemId].name %>
                        </h4>
                        <ul class="item-info">
                            <li>Count: <%= item.count %>
                            </li>
                            <li>Price: $<%= menuItems[item.itemId].price %>
                            </li>
                        </ul>
                    </div>
                <% }) %>
                <div class="total-cost">
                    Total Cost: $<%= orderItems.reduce((sum, item) => sum + item.count * menuItems[item.itemId].price, 0) %>
                </div>
            <% } else { %>
                <p>No items in the order.</p>
            <% } %>
        </div>
        <button class="btn btn-primary confirm-order-btn" onclick="confirmOrder()">Confirm Order</button>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmOrder() {
            // Send the order data to the /data route to store it
            $.ajax({
                url: '/order/queue',
                method: 'POST',
                data: { order: JSON.stringify(orderItems) },
                success: function (response) {
                    // Redirect to the /bill page after successfully confirming the order
                    window.location.href = '/bill';
                },
                error: function (err) {
                    console.error(err);
                }
            });
        }
    </script>
</body>

</html>