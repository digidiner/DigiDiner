<head>
    <meta charset="UTF-8">
    <title>DigiDiner</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <header class="px-3 py-4 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="/images/logo.png" alt="Image" class="img-fluid mb-3">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" id="menuDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <svg class="bi bi-card-list" width="24" height="24" role="img" aria-label="Menu">
                                <use xlink:href="#card-list" />
                            </svg>
                            Menu
                        </a>
                        <ul class="dropdown-menu shadow" aria-labelledby="menuDropdown">
                            <li><a class="dropdown-item" href="/">Lunch Menu</a></li>
                            <li><a class="dropdown-item" href="#">Dinner Menu</a></li>
                            <li><a class="dropdown-item" href="#">Drink Menu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link px-2 text-white">
                            <svg class="bi bi-cart-check-fill" width="24" height="24" role="img" aria-label="Cart">
                                <use xlink:href="#cart-check-fill" />
                            </svg>
                            Cart
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>